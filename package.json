{
  "name": "ipage-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:asciidoc dev:next",
    "dev:next": "next dev",
    "dev:asciidoc": "node scripts/watch-asciidoc.js",
    "build:asciidoc": "rm -rf public/asciidoc && node scripts/build-asciidoc.js",
    "prebuild": "rm -rf .next public/asciidoc",
    "build": "npm run build:asciidoc && next build",
    "start": "next start",
    "lint": "eslint",
    "export": "npm run build:asciidoc && next export"
    ,"test": "jest"
  },
  "dependencies": {
    "asciidoctor": "^3.0.4",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "25.0.10",
    "@types/react": "19.2.9",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^24.36.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "wait-on": "^9.0.3"
  }
}
